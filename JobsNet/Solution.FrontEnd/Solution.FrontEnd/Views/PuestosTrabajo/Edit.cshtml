@model PuestosTrabajo

@{
    ViewData["Title"] = "Editar Puesto";
}
<style>
    .breadcrumb-style1 {
        border-radius: 0;
        background-color: transparent;
        padding: 0;
    }
</style>
    
<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-style1 mg-b-0">
        <li class="breadcrumb-item">
            <a asp-action="Index">
                <i class="fas fa-angle-left"></i>
                Volver a la lista
            </a>
        </li>
    </ol>
</nav>

<hr class="mg-y-10">

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdPuesto" />
        <input type="hidden" asp-for="IdEmpresa" />
        <input type="hidden" asp-for="FechaPublicacion" />
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Titulo" class="control-label mg-b-0"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Descripcion" class="control-label mg-b-0"></label>
            </div>
            <div class="col-md-10">
                <textarea asp-for="Descripcion" class="form-control" placeholder="Criterios de aceptacion del candidato"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="Requisitos" class="control-label mg-b-0"></label>
            </div>
            <div class="col-md-10">
                <textarea asp-for="Requisitos" class="form-control" placeholder="Criterios de aceptacion del candidato"></textarea>
                <span asp-validation-for="Requisitos" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="FechaCierre" class="control-label mg-b-0"></label>
            </div>
            <div class="col-md-10">
                <input  class="form-control hasDatepicker" asp-for="FechaCierre" 
                    id="datetimepicker" type="text" placeholder="DD/MM/YYYY"/>
                <span asp-validation-for="FechaCierre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar Cambios" class="btn btn-az-secondary" />
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="~/lib/jquery-simple-datetimepicker/jquery.simple-dtpicker.js"></script>
    <script>
        $(function () {
            'use strict'
            $('#datetimepicker').appendDtpicker({
                closeOnSelected: true,
                onInit: function (handler) {
                    var picker = handler.getPicker();
                    $(picker).addClass('az-datetimepicker');
                },
                dateFormat: 'DD/MM/YYYY',
                dateOnly: true,
                futureOnly: true,
                locale: "es",
                firstDayOfWeek: 1,
                autodateOnStart: false
            });
        });
    </script>
}
